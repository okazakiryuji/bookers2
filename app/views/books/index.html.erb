<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img src="https://bookers-level2.herokuapp.com/rails/active_storage/representations/redirect/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaHBBeHhnQWc9PSIsImV4cCI6bnVsbCwicHVyIjoiYmxvYl9pZCJ9fQ==--c28769956e758d9c5e181161b7c54719cf57ae47/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaDdCem9MWm05eWJXRjBTU0lJYW5CbkJqb0dSVlE2RkhKbGMybDZaVjkwYjE5c2FXMXBkRnNIYVdscGFRPT0iLCJleHAiOm51bGwsInB1ciI6InZhcmlhdGlvbiJ9fQ==--4a929dbc7794f3c4610ba9ba5402762ad9cd1a14/default-image.jpg">

      <div class="row">
        <%= link_to users_path,class: 'btn btn-outline-secondary btn-block ' do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h1>

      <%= form_with model: @Book, url: '/books', method: :pos do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title, class:'form-control book_title' %>
        </div>

        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:'form-control book_body' %>
        </div>

       <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>