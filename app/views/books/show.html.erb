<p><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <% if current_user.profile_image.attached? %>
           <%= image_tag current_user.profile_image, size: "100x100" %>
          <% else %>
           <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user.id),class: 'btn btn-outline-secondary btn-block ' do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h1>

      <%= form_with model: @Book, url: '/books', method: :pos do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title, class:'form-control book_title' %>
        </div>

        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:'form-control book_body' %>
        </div>

       <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image, size: "80x80" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id)%></td>
            <td><%= @book.body %></td>

            <td><%= link_to "Edit", edit_book_path(@book.id),class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削しますか？",class: 'btn btn-sm btn-danger' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>