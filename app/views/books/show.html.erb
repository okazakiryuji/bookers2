<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>
              <%= @user.user.name %>
            </th>
          </tr>
          <% end %>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user.id),class: 'btn btn-outline-secondary btn-block ' do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h1>

      <%= form_with model: @Book, url: '/books', method: :pos do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title, class:'form-control book_title' %>
        </div>

        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:'form-control book_body' %>
        </div>

       <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <tb></tb>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>