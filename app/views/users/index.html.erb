<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">New book</h1>

      <%= form_with model: @User, url: '/users', method: :pos do |f| %>
         <h4>Title</h4>
         <%= f.text_field :title %>

         <h4>Opinion</h4>
         <%= f.text_area :body %>

       <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>